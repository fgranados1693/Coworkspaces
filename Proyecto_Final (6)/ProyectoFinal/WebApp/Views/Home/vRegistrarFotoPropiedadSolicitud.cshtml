
@using WebApp.Helpers;
<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
<script src="~/Scripts/Views/vRegistrarFotoPropiedadSolicitud.js"></script>
@{
    Layout = "~/Views/Shared/_LayoutForms.cshtml";
}

<!--Style sheets-->
<link href="~/Content/Project_Styles/FotoPropiedad.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div>
            <h5>Adjunte las fotografías de la propiedad (puede agregar más de una imagen).</h5>
            <h5>Paso 7</h5>
        </div>
        <div class="col align-self-center">
            <form id="registrarFotoPropiedad" class="text-center">
                <div class="form-group class-img">
                    <div class="text-center" style="margin-top:50px;">
                        <img id="img-cnt" width="300" height="300" />
                    </div>
                    <div class="text-center">
                        @Html.CtrlButton(viewName: "vRegistrarFotoPropiedadSolicitud", id: "upload_widget", label: "Agregar imágenes", onClickFunction: "Cargar", buttonType: "primary")
                    </div>
                </div>
            </form>
            <div class="text-center" style="margin-top: 30px;">
                @Html.CtrlButton(viewName: "vRegistrarFotoPropiedadSolicitud", id: "btnEnviar", label: "Registrar imagen", onClickFunction: "RegistrarFotos", buttonType: "primary")
            </div>
        </div>
    </div>

    <div class="alert alert-success alert-dismissable" style="display: none" id="alert_container">
        <button type="button" class="close" onclick="$('.alert').hide()">&times;</button>
        <p id="alert_message"></p>
        <p id="alert_message_foto"></p>
    </div>
</div>



