@using WebApp.Helpers;

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
@{
    ViewBag.Title = "vCambiarContrasenna";
}

@section Dashboard {
    <script src="~/Scripts/Views/vCambiarContrasenna.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.0.0/crypto-js.min.js" integrity="sha512-nOQuvD9nKirvxDdvQ9OMqe2dgapbPB7vYAMrzJihw5m+aNcf0dX53m6YxM4LgA9u8e9eg9QX+/+mPu8kCNpV2A==" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js" integrity="sha512-qTXRIMyZIFb8iQcfjXWCO8+M5Tbc38Qi5WzdPOYZHIlZpzBHG3L3by84BBBOiRGiEb7KKtAOAs5qYdUiZiQNNQ==" crossorigin="anonymous"></script>
    <script src="~/Scripts/Views/MD5.js"></script>

    <link href="~/Content/Project_Styles/CustomDataTables.css" rel="stylesheet" />

    <div class="container">
        <div class="row">
            <div class="col align-self-center">
                <h3>Cambiar contraseña</h3>
                <form id="formCont">

                    @Html.CtrlInput(id: "ContrasennaActual", type: "password", label: "Contraseña actual", columnDataName: "ContrasennaActual", placeHolder: "Ingrese su contraseña actual")
                    @Html.CtrlInput(id: "NuevaContrasenna", type: "password", label: "Nuevo contraseña", columnDataName: "NuevaContrasenna", placeHolder: "Ingrese su nueva contraseña")


                </form>
                <div class="alert alert-success alert-dismissable" style="display: none" id="alert_container">
                    <button type="button" class="close" onclick="$('.alert').hide()">&times;</button>
                    <span id="alert_message"></span>
                </div>
                <div>
                    @Html.CtrlButton(viewName: "vCambiarContrasenna", id: "btnCre", label: "Guardar cambios", onClickFunction: "Create", buttonType: "primary")
                </div>
            </div>
        </div>
    </div>

}