
@using WebApp.Helpers;
<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>


@{
    Layout = "~/Views/Shared/_LayoutForms.cshtml";
}

<!--Style sheets-->
<link href="~/Content/Project_Styles/FotoPropiedad.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col align-self-center">
            <form id="registrarFotoPerfil" class="text-center">
                <div class="form-group class-img">
                    <h4 class="text-lg-left">Subir foto de perfil</h4>
                    <div class="text-center" style="margin-top:50px;">
                        <img id="img-cnt" width="300" height="300" />
                    </div>
                    <div class="text-center">
                        @Html.CtrlButton(viewName: "vRegistrarFotoPerfil", id: "upload_widget", label: "Agregar foto perfil", onClickFunction: "Cargar", buttonType: "primary")
                    </div>
                </div>
            </form>
            <div class="text-center" style="margin-top: 30px;">
                @Html.CtrlButton(viewName: "vRegistrarFotoPerfil", id: "btnEnviar", label: "Registrar foto", onClickFunction: "RegistrarFoto", buttonType: "primary")
            </div>
        </div>
    </div>

    <div class="alert alert-success alert-dismissable" style="display: none" id="alert_container">
        <button type="button" class="close" onclick="$('.alert').hide()">&times;</button>
        <p id="alert_message"></p>
        <p id="alert_message_foto"></p>
    </div>
</div>

<script src="~/Scripts/Views/vRegistrarFotoPerfil.js"></script>
